<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="aj.syringepump.Menu"
    >

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/dispenseInput"
        android:hint="Enter the amount here"
        android:textAlignment="center"
        android:fontFamily="serif"
        android:layout_below="@+id/startButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/header"
        android:text="@string/header"
        android:fontFamily="serif"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/appTitle"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/dispenseButton"
        android:id="@+id/dispenseButton"
        android:fontFamily="serif"
        android:shadowRadius="5"
        android:shadowDx="0"
        android:shadowDy="0"
        android:textColor="#000000"
        android:background="@drawable/buttonshape"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/dispenseInput"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/appTitle"
        android:id="@+id/appTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:fontFamily="serif" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;-"
        android:id="@+id/leftBtn"
        android:layout_below="@+id/dispenseButton"
        android:layout_alignStart="@+id/dispenseInput"
        android:background="@drawable/buttonshape" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="->"
        android:id="@+id/rightBtn"
        android:layout_below="@+id/dispenseButton"
        android:layout_alignEnd="@+id/dispenseInput"
        android:background="@drawable/buttonshape" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/startSession"
        android:id="@+id/startButton"
        android:layout_below="@+id/header"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:background="@drawable/buttonshape"
        android:fontFamily="serif" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/endSession"
        android:id="@+id/doneButton"
        android:layout_alignBottom="@+id/startButton"
        android:layout_alignParentEnd="true"
        android:fontFamily="serif"
        android:background="@drawable/buttonshape" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="inactive"
        android:id="@+id/activeText"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="outward"
        android:id="@+id/direction"
        android:layout_alignBottom="@+id/doneButton"
        android:layout_alignStart="@+id/activeText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/numOfml"
        android:hint="# of ml"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/activeText"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ml"
        android:id="@+id/mlLabel"
        android:layout_alignTop="@+id/numOfml"
        android:layout_toEndOf="@+id/direction" />

</RelativeLayout>
